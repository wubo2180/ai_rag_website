# ============================================
# 生产环境配置模板
# ============================================
# 1. 复制此文件为 .env: cp .env.production .env
# 2. 修改所有标记为 <必须修改> 的值
# 3. 确保不要将 .env 提交到 Git
# ============================================

# ==================== Django 设置 ====================

# 生产环境必须为 False
DEBUG=False

# <必须修改> 使用随机生成的密钥
# 生成方法: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=<必须修改-生成随机密钥>

# <必须修改> 添加你的域名和服务器IP
# 多个域名用逗号分隔，不要有空格
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# ==================== 数据库配置 ====================

DB_NAME=rag_db
DB_USER=postgres

# <必须修改> 设置强密码
# 建议: 至少16位，包含大小写字母、数字和特殊字符
DB_PASSWORD=<必须修改-强密码>

DB_HOST=db
DB_PORT=5432

# ==================== Dify API 配置 ====================

# <必须修改> 你的 Dify API 密钥
DIFY_API_KEY=<必须修改-Dify-API-密钥>

# <必须修改> Dify 服务地址
# 如果 Dify 在同一服务器: http://host.docker.internal/v1
# 如果在其他服务器: http://dify-server-ip/v1
DIFY_BASE_URL=<必须修改-Dify-服务地址>

# 默认 AI 模型
DIFY_DEFAULT_MODEL=通义千问

# ==================== AI 模型列表 ====================

# 可用的 AI 模型，逗号分隔
AVAILABLE_AI_MODELS=deepseek深度思考,通义千问,腾讯混元,豆包,Kimi,GPT-5,Claude4,Gemini2.5,Grok-4,Llama4

# ==================== 生产环境优化（可选） ====================

# Gunicorn Workers 数量（推荐: CPU核心数 × 2 + 1）
GUNICORN_WORKERS=5

# 数据库连接池大小
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis 缓存配置（如果使用）
# REDIS_URL=redis://redis:6379/1

# ==================== 安全设置（可选） ====================

# CSRF Trusted Origins（如果使用 HTTPS）
# CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Session Cookie 安全设置
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000

# ==================== 日志级别 ====================

LOG_LEVEL=INFO

# ==================== 邮件配置（可选，用于错误通知） ====================

# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@your-domain.com
# ADMINS=admin@your-domain.com

# ==================== 第三方服务（可选） ====================

# Sentry（错误追踪）
# SENTRY_DSN=https://your-sentry-dsn

# AWS S3（静态文件存储）
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=us-east-1

# ==================== 监控配置（可选） ====================

# 监控告警邮箱
ALERT_EMAIL=admin@your-domain.com

# 备份保留天数
BACKUP_RETENTION_DAYS=7
